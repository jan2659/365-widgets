{
    "parser": "@typescript-eslint/parser",
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": [
            "./tsconfig.json"
        ]
    },
    "rules": {
        "@typescript-eslint/explicit-function-return-type": 0,
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "@typescript-eslint/indent":  ["error", 4]
    }
}
